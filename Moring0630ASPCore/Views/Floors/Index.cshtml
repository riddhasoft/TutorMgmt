@model List<Floor>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Floor List</h1>
<a asp-controller="Floors" asp-action="Create">Create New</a>

<table class="table table-striped table-condensed">
    <tr>
        <th>Name</th>

        <th>Building</th>
        <th></th>
    </tr>
    @foreach (var floor in Model)
    {
        <tr>
            <td>
                @floor.Name
            </td>
            <td>
                @floor.Building.Name
            </td>
            <td>
                <a href="/Floors/Edit/@floor.Id">Edit</a>
                <a asp-controller="Floors" asp-action="Delete" asp-route-id="@floor.Id">Delete</a>
            </td>
        </tr>
    }
</table>